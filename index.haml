%body{'ng-app' => 'recipeFinder', 'ng-cloak' => 'true'}
  .menu{'ng-controller' => 'ItemListController as vm'}
    .menu_item
      .menu_item__inner{'ng-repeat' => 'item in vm.items', 'ng-show' => 'item.id == vm.index'}
        %h2 {{ item.name }}
        %img{:src => '{{item.image}}', :width => '200', :height => 'auto'}
    .menu_item__nav
      %i{:class => 'fa fa-chevron-left', 'ng-click' => 'vm.prev()'}
      %i{:class => 'fa fa-chevron-right', 'ng-click' => 'vm.next()'}
    .menu_recipe
      .menu_recipe__list{'ng-repeat' => 'item in vm.items', 'ng-show' => 'item.id == vm.index'}
        %h2 {{item.name}} Ingredients
        %ul
          %li{'ng-repeat' => 'i in item.ingredients'}
            {{ i }}